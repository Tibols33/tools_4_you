<div class="box-show">
      <div class="group">

        <div class="overlap-group">
          <div class="section-benefits">
              <div class="image">
                <% if @tool.photo.attached? %>
                <%= cl_image_tag @tool.photo.key, width: "500px" %>
                <% end %>
              </div>

            <div class="text-left">
              <p class="title-show"><%= @tool.name %></p>
              <p class="subline"> Annonce mise en ligne le : <%= @tool.created_at %> </p>
              <p class="div"><%= @tool.description  %></p>
              <p class="text-wrapper-2"><%= @tool.price %> €/day</p>
          <div class="text-wrapper-show"> <%= link_to "🛒 Add a cart", new_tool_booking_path(@tool) %></div>
            </div>
          </div>
        </div>
      </div>
    </div>

<div class="background-adress">
  <p class="text-adress-map">📍Localisation : <%= @tool.address %></p>
</div>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
